@{
	ViewData["Title"] = "Manage Expense";
}
<!-- Call in the expense model we created-->
@model ExpenseTracker.Models.Expense

<div class="text-center">
	<h1 class="display-4">Create or Edit an expense</h1>
</div>

<form asp-action="ManageExpenseForm">
	<!--
		asp-action sends the submitted data object to the mentioned method
		asp-for ="" maps the value with the property in our model
		mt-4 (margin top 4) is a bootstrap styling
		Step =" " determines how much to increase/decrease the value by
	-->

	<label>Id</label>
	<input hidden class = "form-control" type = "number" placeholder = "0" asp-for ="Id" />

	<label class ="mt-4">Value(LKR)</label>
	<input class="form-control" type="number" placeholder="0" asp-for="Value" step = "0.01"/>

	<label class ="mt-4">Description</label>
	<input class="form-control" type="text" placeholder="Describe your expense" asp-for="Description" />

	<button class="btn btn-primary mt-4" type="submit">Done</button>

</form>